{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "lib": ["es6", "dom"],
    "jsx": "react",
    "alwaysStrict": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "global.d.ts",
    "public/js/**/*"
  ]
}
